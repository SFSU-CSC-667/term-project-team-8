doctype html
html
  head
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous")
    link(rel="stylesheet" href="stylesheet.css")

  body
    div(class="container widthfull")
      ul(class="nav nav-tabs")
        li(class="active")
          a(data-toggle="tab" href="#lobby") Home
        li
          a(data-toggle="tab" href="#leaderboard") Leaderboard
        li
          a(data-toggle="tab" href="#rules") Rules
        li
          a(data-toggle="tab" href="#about") About

      div(class="tab-content paddingtop")
        div(class="tab-pane active" id="lobby")
          div(class="row")
            form(action="/createroom" method="post" class="col-sm-3")
              div(class="form-group row")
                label(class="col-sm-12 col-form-label formcenter formhead") Add New Game
              div(class="form-group row")
                label(class="col-sm-3 col-form-label") Score
                div(class="col-sm-9")
                  input(type="text" class="form-control" name="score")
              div(class="")
                div(class="col-sm-12")
                  button(class="buttonstyle" type="submit") + New

            div(class="col-sm-6")
              label(class="col-sm-12 col-form-label formhead") Join Game
              button(class="gameroom inlineblock") Game 1 
              button(class="gameroom inlineblock") Game 2
              button(class="gameroom inlineblock") Game 3 
              button(class="gameroom inlineblock") Game 4

        div(class="col-sm-5 tab-pane" id="leaderboard")
          table(class="table")
            thead
              tr
                th Rank 
                th Name 
                th Score 
            tbody
              tr
                td 1
                td Name 1
                td
              tr
                td 2
                td Name 2
                td
              tr
                td 3
                td Name 3
                td
              tr
                td 4
                td Name 4
                td
              tr
                td 5
                td Name 5
                td
              tr
                td 6
                td Name 6
                td
              tr
                td 7
                td Name 7
                td
              tr
                td 8
                td Name 8
                td
              tr
                td 9
                td Name 9
                td
              tr
                td 10
                td Name 10
                td
              tr
                td rank
                td Name 11
                td 
        div(class="tab-pane" id="rules")
          p game rules
        div(class="tab-pane" id="about")
          p about page
