doctype html
html
  head
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous")
    link(rel="stylesheet" href="stylesheet.css")    
    link(rel="stylesheet" href="gamestyle.css")

  body
    div(class="container grid widthfull")
      div(class="col-sm-3 row gameleft" id="leaderboard")
        table(class="table")
          thead
            tr
              th Rank 
              th Name 
              th Score 
          tbody
            tr
              td #{player1.rank}
              td #{player1.username}
              td #{player1.score}
            tr
              td #{player2.rank}
              td #{player2.username}
              td #{player2.score}
            tr
              td #{player3.rank}
              td #{player3.username}
              td #{player3.score}
            tr
              td #{player4.rank}
              td #{player4.username}
              td #{player4.score}
        div
          button(class="card floatleft") Card 1 
          button(class="card inlineblock") Card 2
        div
          button(class="card floatleft") Card 3 
          button(class="card inlineblock") Card 4
        div
          button(class="card floatleft") Card 5 
          button(class="card inlineblock") Card 6

      div(class="col-sm-3 row")
        button(class="col-sm-12 blackcard floatleft") Black Card
        div(class="col-sm-12")
          button(class="inlineblock") Submit 

      div(class="col-sm-12 row gameleft")
        button(class="card inlineblock") Hand Card 1
        button(class="card inlineblock") Hand Card 2
        button(class="card inlineblock") Hand Card 3


